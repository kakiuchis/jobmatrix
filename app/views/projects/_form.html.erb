<%= form_for([@field, @level, @project]) do |f| %>
  <%= f.error_messages! %>
  <div class="field">
    <%= f.hidden_field :level_id %>
  </div>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content, class: 'form-control', rows: 10 %>
  </div>
  <div class="actions">
    <%= f.submit '決定', class: 'btn btn-primary btn-block' %>
  </div>
<% end %>
