<p id="notice"><%= notice %></p>

<h1>Listing Levels</h1>

<table class="table">
  <thead>
    <tr>
      <th>Level</th>
      <th>タリフ</th>
      <th><%= @field.name %></th>
      <th>代表的なスキル要件</th>
      <th>代表的な言語、ツール</th>
      <th>推奨資格</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @levels.each do |level| %>
      <tr>
        <td><%= level.height %></td>
        <td><%= level.mintariff %>～<%= level.maxtariff %>万円</td>
        <td><%= level.name %></td>
        <td><%= level.skill %></td>
        <td><%= level.tool %></td>
        <td><%= level.certificate %></td>
        <td><%= link_to 'Show', field_level_path(@field, level) %></td>
        <td><%= link_to 'Edit', edit_field_level_path(@field, level) %></td>
        <td><%= link_to 'Destroy', field_level_path(@field, level), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

